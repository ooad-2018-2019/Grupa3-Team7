@model WMS.Models.StorageSpace

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Edit</h1>

<h4>StorageSpace</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().ItemDetails.ImageURI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().ItemDetails.UPC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().ItemDetails.Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items != null)
        {
            foreach (var item in Model.Items)
            {
        <tr>
            <td>
                <img style="max-width:64px" src="@Html.DisplayNameFor(model => item.ItemDetails.ImageURI)"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemDetails.UPC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemDetails.Name)
            </td>
        </tr>
            }
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
