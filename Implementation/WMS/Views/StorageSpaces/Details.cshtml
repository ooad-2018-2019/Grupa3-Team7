@model WMS.Models.StorageSpace

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>StorageSpace</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UsedUp)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UsedUp) <span>&nbsp%</span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Available)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Available)
        </dd>
    </dl>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Items.FirstOrDefault().ItemDetails.ImageURI)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items.FirstOrDefault().ItemDetails.UPC)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items.FirstOrDefault().ItemDetails.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Items.FirstOrDefault().ItemDetails.Volume)
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Items != null)
            {
                foreach (var item in Model.Items)
                {
            <tr>
                <td>
                    <img style="max-width:64px" src="@Html.DisplayFor(model => item.ItemDetails.ImageURI)" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemDetails.UPC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemDetails.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemDetails.Volume)
                </td>
            </tr>
                }
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
